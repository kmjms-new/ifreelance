
                <% content_for :title, "Edit Freelance" %>


				<!-- Page Header -->
                <div class="content bg-gray-lighter">
                    <div class="row items-push">
                        <div class="col-sm-7">
                            <h1 class="page-heading animated zoomIn">
                                Editar Freelance <small>Edit Existing Freelance</small>
                            </h1>
                        </div>
                        <div class="col-sm-5 text-right hidden-xs">
                            <ol class="breadcrumb push-10-t">
                                <li>Inicio</li>
                                <li><a class="link-effect" href="">Editar Freelance</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- END Page Header -->

                <!-- Page Content -->
                <div class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="block">
                                <div class="block-header">
                                    <ul class="block-options">
                                        <li>
                                            <button type="button" data-toggle="block-option" data-action="fullscreen_toggle"><i class="si si-size-fullscreen"></i></button>
                                        </li>
                                        <li>
                                            <button type="button" data-toggle="block-option" data-action="content_toggle"><i class="si si-arrow-up"></i></button>
                                        </li>
                                    </ul>
                                    <h3 class="block-title">Freelance Form <small>Requierd</small></h3>
                                </div>
                                <div class="block-content block-content-narrow">
                                    <div class="row">
                                        <div class="col-md-6 col-md-offset-3">
                                            <%= form_for @freelance, :html=>{:class=>'form-horizontal push-10-t'} do|f| %>
                                                <div class="form-group">
                                                    <label class="col-xs-12" for="example-password-input">Nombre</label>
                                                    <div class="col-sm-12">
                                                        <%= f.text_field :freelance_name, :class=>'form-control', :placeholder=>"Enter freelance Name", :required=>''  %>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-xs-12" for="example-password-input">Telefono</label>
                                                    <div class="col-sm-12">
                                                        <%= f.text_field :freelance_phone, :class=>'form-control', :placeholder=>"Enter Freelance Phone", :required=>''  %>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-xs-12" for="example-password-input">Correo</label>
                                                    <div class="col-sm-12">
                                                        <%= f.text_field :freelance_email, :class=>'form-control', :placeholder=>"Enter freelance Email", :type=>'email', :required=>''  %>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="col-xs-12" for="example-password-input">Sexo</label>
                                                            <div class="col-sm-12">
                                                                <%= f.select :freelance_sex, options_for_select([ 'Masculino', 'Femenino'], :selected => 'f.freelance_sex'), {:include_blank => false}, {:class=>'form-control'} %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="col-xs-12" for="example-password-input">Salario</label>
                                                            <div class="col-sm-12">
                                                                <%= f.text_field :freelance_salary, :class=>'form-control', :placeholder=>"Enter Total Salary", :type=>'number', :required=>''  %>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-xs-12" for="example-password-input">Direccion</label>
                                                    <div class="col-sm-12">
                                                        <%= f.text_area :freelance_address, :class=>'form-control', :placeholder=>"Enter Freelance Address", :rows=>'2', :required=>''  %>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        <%= f.submit :class=>'btn btn-sm btn-primary', :value=>'Guardar' %>
                                                    </div>
                                                </div>

                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
