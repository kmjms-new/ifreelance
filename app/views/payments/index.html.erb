<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Invoice</th>
      <th>Payment amount</th>
      <th>Payment type</th>
      <th>Payment method</th>
      <th>Payment date</th>
      <th>Notes</th>
      <th>Send payment notification</th>
      <th>Paid full</th>
      <th>Archive number</th>
      <th>Credit applied</th>
      <th>Status</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.invoice %></td>
        <td><%= payment.payment_amount %></td>
        <td><%= payment.payment_type %></td>
        <td><%= payment.payment_method %></td>
        <td><%= payment.payment_date %></td>
        <td><%= payment.notes %></td>
        <td><%= payment.send_payment_notification %></td>
        <td><%= payment.paid_full %></td>
        <td><%= payment.archive_number %></td>
        <td><%= payment.credit_applied %></td>
        <td><%= payment.status %></td>
        <td><%= payment.client %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

