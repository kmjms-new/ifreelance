<p id="notice"><%= notice %></p>

<h1>Sent Emails</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Type</th>
      <th>Subject</th>
      <th>Content</th>
      <th>Notification</th>
      <th>Notification type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sent_emails.each do |sent_email| %>
      <tr>
        <td><%= sent_email.date %></td>
        <td><%= sent_email.sender %></td>
        <td><%= sent_email.recipient %></td>
        <td><%= sent_email.type %></td>
        <td><%= sent_email.subject %></td>
        <td><%= sent_email.content %></td>
        <td><%= sent_email.notification_id %></td>
        <td><%= sent_email.notification_type %></td>
        <td><%= link_to 'Show', sent_email %></td>
        <td><%= link_to 'Edit', edit_sent_email_path(sent_email) %></td>
        <td><%= link_to 'Destroy', sent_email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sent Email', new_sent_email_path %>
