<% content_for :title, "Edit Project" %>


                <!-- Page Header -->
                <div class="content bg-gray-lighter">
                    <div class="row items-push">
                        <div class="col-sm-7">
                            <h1 class="page-heading animated zoomIn">
                                Editar Proyecto <small>Edit Existing Proyecto Data.</small>
                            </h1>
                        </div>
                        <div class="col-sm-5 text-right hidden-xs">
                            <ol class="breadcrumb push-10-t">
                                <li>Inicio</li>
                                <li><a class="link-effect" href="">Edit Proyecto</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- END Page Header -->

                <!-- Page Content -->
                <div class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="block">
                                <div class="block-header">
                                    <ul class="block-options">
                                        <li>
                                            <button type="button" data-toggle="block-option" data-action="fullscreen_toggle"><i class="si si-size-fullscreen"></i></button>
                                        </li>
                                        <li>
                                            <button type="button" data-toggle="block-option" data-action="content_toggle"><i class="si si-arrow-up"></i></button>
                                        </li>
                                    </ul>
                                    <h3 class="block-title">Proyecto Form <small>Requierd</small></h3>
                                </div>
                                <div class="block-content block-content-narrow">
                                    <div class="row">
                                        <div class="col-md-8 col-md-offset-2">
                                            <%= form_for @project, :html=>{:class=>'form-horizontal push-10-t'} do|f| %>
                                                <div class="form-group">
                                                    <label class="col-xs-12" for="example-password-input">Nombre Cliente</label>
                                                    <div class="col-sm-12">
                                                        <% options = options_from_collection_for_select(@client, 'id', 'client_name', :selected => f.object.client_id) %>
                                                            <%= f.select :client_id, options, {:include_blank => false}, {:class=>'form-control select_list', :style=>"width:100%"} %>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-xs-12" for="example-password-input">Nombre Freelance</label>
                                                    <div class="col-sm-12">
                                                        <% options = options_from_collection_for_select(@freelance, 'id', 'freelance_name', :selected => f.object.freelance_id) %>
                                                            <%= f.select :freelance_id, options, {:include_blank => false}, {:class=>'form-control select_list', :style=>"width:100%"}  %>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-xs-12" for="example-password-input">Delivery Date</label>
                                                    <div class="col-sm-12">
                                                        <%= f.text_field :delivery_date, :class=>'form-control', :type=>"date", :required=>''  %>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="col-xs-12" for="example-password-input">Cantidad</label>
                                                            <div class="col-sm-12">
                                                                    <%= f.text_field :project_amount, :class=>'form-control', :placeholder=>"Enter Total cantidad", :type=>'number', :required=>''  %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="col-xs-12" for="example-password-input">Pagado</label>
                                                            <div class="col-sm-12">
                                                                <%= f.text_field :project_paid, :class=>'form-control', :placeholder=>"Enter Pago", :type=>'number', :required=>''  %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-xs-12" for="example-password-input">Detalle Proyecto</label>
                                                    <div class="col-sm-12">
                                                        <%= f.text_area :project_details, :class=>'form-control', :placeholder=>"Enter project Details", :rows=>'2', :required=>''  %>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-xs-12">
                                                        <div class="form-material">
                                                            <label>Estado</label>
                                                            <div class="col-xs-12">
                                                                <div class="row">
                                                                    <div class="col-md-3"><label class="css-input css-radio css-radio-default"><%= f.radio_button :project_status, 'Confirm', :class=>'icheckbox_square-green' %><span></span> Confirm </label></div>
                                                                    <div class="col-md-3"><label class="css-input css-radio css-radio-warning"><%= f.radio_button :project_status, 'Processing', :class=>'icheckbox_square-green' %><span></span> Processing </label></div>
                                                                    <div class="col-md-3"><label class="css-input css-radio css-radio-success"><%= f.radio_button :project_status, 'Ready', :class=>'icheckbox_square-green' %><span></span> Ready </label></div>
                                                                    <div class="col-md-3"><label class="css-input css-radio css-radio-primary"><%= f.radio_button :project_status, 'Delivered', :class=>'icheckbox_square-green' %><span></span> Delivered </label></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        <%= f.submit :class=>'btn btn-sm btn-primary', :value=>'submit' %>
                                                    </div>
                                                </div>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
